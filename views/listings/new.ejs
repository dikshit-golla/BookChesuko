<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
    
    <div class="col-8 offset-2">
        <h1 class="mt-3">Let's Create a new Listing</h1>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3 mt-5">
        <label for="i1" class="form-label">Title:</label>
        <input type="text" name="listing[title]" placeholder="Enter the flashy title" id="i1" class="form-control" required>
        </div>
        <br>
        <div class="mb-3">
         <label for="i2" class="form-label">Description:</label>
        <input type="text" name="listing[description]" placeholder="Give a brief description" id="i2" class="form-control" required>
        </div>
        <br>
        <div class="mb-3">
         <label for="i6" class="form-label" >Upload Listing Image:</label>
        <input type="file" name="listing[image]"  id="i6" class="form-control">
        </div>
        <br>
        <div class="row">
        <div class="mb-3 col-md-4">
         <label for="i3" class="form-label">Price:</label>
        <input type="text" name="listing[price]" placeholder="0.00" id="i3" class="form-control" required>
        </div>
        <br>
        <div class="mb-3 col-md-8">
         <label for="i5" class="form-label">Country:</label>
        <input type="text" name="listing[country]" placeholder="India" id="i5" class="form-control" required>
        </div>
        </div>
        <div class="mb-3">
         <label for="i4" class="form-label">Location:</label>
        <input type="text" name="listing[location]" placeholder="Enter your Location" id="i4" class="form-control" required>
        </div>
        <br>
        
        <br>
        <button class="btn btn-dark add-btn mt-1">Add</button>
        <br><br><br>
    </form>
    </div>
    </div>
</body>
