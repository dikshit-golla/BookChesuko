<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3 ">

        <div class="col-8 offset-2 ">
    <h1 class="mt-3">Let's Edit a Listing</h1>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post" enctype="multipart/form-data">
        <div class="mb-3 mt-5">
        <label for="i1" class="form-label">Title:</label>
        <input type="text" name="listing[title]" value="<%= listing.title %>" id="i1" class="form-control">
        </div>
         <br>
        <div class="mb-3">
         <label for="i2" class="form-label" >Description:</label>
        <input type="text" name="listing[description]" value="<%= listing.description %>" id="i2" class="form-control"> 
        </div>
         <br>
         <div class="mb-3">
            Original Listing Image : <br>
            <img src="<%= originalImageUrl %> " alt="">
        </div>
        <div class="mb-3">
         <label for="i6" class="form-label" >Upload New Image:</label>
        <input type="file" name="listing[image]" id="i6" class="form-control">
        </div>
        <br>
        <div class="row">
        <div class="mb-3 col-md-4">
         <label for="i3" class="form-label">Price:</label>
        <input type="text" name="listing[price]" value="<%= listing.price %>" id="i3" class="form-control">
        <br>
        </div>
        <div class="mb-3 col-md-8">
         <label for="i5" class="form-label" >Country:</label>
        <input type="text" name="listing[country]" value="<%= listing.country %>" id="i5" class="form-control">
        <br>
        </div>
        </div>
        <div class="mb-3">
         <label for="i4" class="form-label" >Location:</label>
        <input type="text" name="listing[location]" value="<%= listing.location %>" id="i4" class="form-control">
        <br>
        </div>
        
        <button class="btn btn-dark add-btn mt-1 ">Edit</button>
        <br><br><br>
    </form>
    </div>
    </div>
</body>